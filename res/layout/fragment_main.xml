<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical"
              android:baselineAligned="false">
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="32dp"
            android:text="@string/intro_text"
            android:id="@+id/intro_text"
            android:gravity="bottom" android:paddingBottom="5dp"
            android:textSize="18dp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:id="@+id/intro_memo" android:layout_gravity="left"  android:text="@string/intro_last_msg"
                android:layout_weight="2" android:textColor="#3f3f3f" android:textIsSelectable="true"
                android:autoText="true" android:textSize="18dp"/>
        <TextView
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:text=" Submit Hack in the morning"
                android:id="@+id/last_memo" android:layout_weight="4" android:textColor="#3f3f3f"
                android:textSize="18dp"/>
    </LinearLayout>

    <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/record_button"
            android:contentDescription="Press to Record a message"
            android:cropToPadding="false" android:layout_margin="21dp"
            android:focusableInTouchMode="false" android:clickable="false" android:src="@drawable/record"
            android:background="@null"/>

</LinearLayout>

