<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is a really long message but READ IT"
            android:id="@+id/single_task_text" android:textSize="32sp" android:gravity="center" android:singleLine="false"
            android:layout_marginLeft="4dp" android:layout_marginRight="4dp" android:layout_weight="1"
            android:layout_gravity="center"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Some Date"
            android:id="@+id/single_task_date" android:layout_gravity="center" />

</LinearLayout>